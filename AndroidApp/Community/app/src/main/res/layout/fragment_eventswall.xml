<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.80"
            android:text="Event Name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:text="Category"
            android:textColor="#FFFFFF"
            android:background="@drawable/fun_button_on"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0.80"
            android:text="Location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:text="10 min ago" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_grey_border"
        >

        <ToggleButton
            android:id="@+id/endorse_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textOn="Endorse"
            android:textOff="Endorsed"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#E74C3C"
            android:background="@drawable/button_grey_border"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/button_grey_border">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center_vertical"
                android:background="#0000"
                android:paddingRight="5dp"
                android:src="@drawable/ic_chat_bubble_outline_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:clickable="false"
                android:text="30"
                android:textColor="#85929E"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/button_grey_border">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center_vertical"
                android:background="#0000"
                android:paddingRight="5dp"
                android:src="@drawable/ic_share_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:clickable="false"
                android:text="Share"
                android:textColor="#85929E"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
